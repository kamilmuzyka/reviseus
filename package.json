{
    "name": "revise.us",
    "type": "module",
    "dependencies": {
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "pg": "^8.5.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.11",
        "@types/pg": "^7.14.11",
        "@typescript-eslint/eslint-plugin": "^4.21.0",
        "@typescript-eslint/parser": "^4.21.0",
        "concurrently": "^6.0.1",
        "eslint": "^7.23.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "nodemon": "^2.0.7",
        "prettier": "^2.2.1",
        "typedoc": "^0.20.35",
        "typescript": "^4.2.3"
    },
    "scripts": {
        "postinstall": "npm install --prefix client",
        "createDatabase": "createdb reviseus && psql reviseus < src/storage/database/schema.sql",
        "build": "tsc & npm run build --prefix client",
        "setup": "npm run createDatabase & npm run build",
        "devClient": "npm run dev --prefix client",
        "devServer": "tsc -w & nodemon ./dist/app.js",
        "dev": "concurrently \"npm run devClient\" \"npm run devServer\"",
        "docs": "npx typedoc"
    }
}
